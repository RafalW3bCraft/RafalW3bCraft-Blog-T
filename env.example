# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Security Keys (REQUIRED in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-secure-session-secret-here

# GitHub OAuth & API (Optional - for GitHub integration)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Google OAuth (Optional - for Google login)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Admin Credentials (REQUIRED)
ADMIN_USERNAME=admin
# Option 1: Plain password (for development only)
ADMIN_PASSWORD=your-secure-admin-password
# Option 2: Pre-hashed password (recommended for production)
# Generate with: node -e "const c=require('crypto');const s=c.randomBytes(16).toString('hex');const h=c.pbkdf2Sync('your-password',s,100000,64,'sha512').toString('hex');console.log(s+':'+h)"
# ADMIN_PASSWORD_HASH=salt:hash

# Application Settings
NODE_ENV=development
PORT=5000
